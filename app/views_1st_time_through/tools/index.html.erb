<h1> All Tools </h1>

<%= link_to "Create New Tool", new_tool_path %>

<% @tools.each do |tool| %>
  <!-- <%= link_to "#{tool.name}", "/tools/#{tool.id}" %>  replace this with:-->
  <p>
  <%= link_to "#{tool.name}", tool_path(tool.id), {class: "test", id: "id_name" } %>
  <!-- using rails helper -->
  <%= tool.name %> - <%= tool.quantity %></p>
<% end %>
